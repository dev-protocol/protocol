{
	"compilerOptions": {
		"target": "es2015",
		"lib": ["es2015", "es2016", "es2017", "es2018", "esnext"],
		"moduleResolution": "node",
		"module": "commonjs",
		"strict": true,
		"rootDir": "./",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types", "./types"],
		"types": ["node", "truffle-contracts"]
	},
	"include": ["**/*"]
}
